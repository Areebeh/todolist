<%- include ("header"); -%>

<body>

    <div class="box" id="heading">
        <h1>
            <%= listItem %>
        </h1>
    </div>


    <div class="box">

        <%for(var i=0 ; i < addListItems.length ; i++ ){%>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= addListItems[i].id %>" onchange="this.form.submit()">
                <p> <%= addListItems[i].name %> </p>
            </div>
            <input type="hidden" name="listName" value="<%=listItem%>">
            </form>
            <%}%>


                <form action="/" method="post" class="item">
                    <input type="text" name="item" placeholder="new items" autocomplete="off">
                    <button type="submit" name="button" value=<%=listItem %>>+</button>
                </form>

    </div>

</body>


<%- include ("footer"); -%>